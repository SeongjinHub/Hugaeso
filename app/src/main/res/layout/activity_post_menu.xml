<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/layout_post_bottom_sheeet"
    android:orientation="vertical"
    android:padding="25dp"
    app:behavior_hideable="false"
    app:behavior_peekHeight="300dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@drawable/layout_post_menu">

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_post_menu_btn_padding"
            android:text="Button"
            android:textSize="@dimen/activity_post_menu_btn_textsize"
            android:background="@drawable/btn_post_menu_top"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:visibility="visible" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_post_menu_btn_padding"
            android:text="Button"
            android:textSize="@dimen/activity_post_menu_btn_textsize"
            android:background="@drawable/btn_post_menu_mid"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:visibility="visible" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_post_menu_btn_padding"
            android:text="Button"
            android:textSize="@dimen/activity_post_menu_btn_textsize"
            android:background="@drawable/btn_post_menu_mid"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_modify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_post_menu_btn_padding"
            android:text="@string/activity_post_menu_modify"
            android:textSize="@dimen/activity_post_menu_btn_textsize"
            android:background="@drawable/btn_post_menu_mid"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_post_menu_btn_padding"
            android:text="@string/activity_post_menu_delete"
            android:textColor="@color/red_100"
            android:textSize="@dimen/activity_post_menu_btn_textsize"
            android:background="@drawable/btn_post_menu_bottom"/>


    </LinearLayout>

</LinearLayout>