<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/parent_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_header"
            android:background="@color/app_main_color"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

        </LinearLayout>

        <LinearLayout
            android:id="@+id/title_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layout_title_area"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/title_logo_height"
                android:padding="@dimen/title_logo_padding"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Welcome"
                android:textAlignment="center"
                android:textColor="@color/default_text_color_white"
                android:textSize="10pt" />

        </LinearLayout>

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_rad_corner_sign"
            android:ems="10"
            android:hint="USERNAME"
            android:inputType="text"
            android:padding="@dimen/edittext_default_padding"
            android:visibility="visible" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_rad_corner_sign"
            android:ems="10"
            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:padding="@dimen/edittext_default_padding"
            android:selectAllOnFocus="true"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text_login_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:text="@string/activity_login_sign_in_fail"
            android:textAlignment="center"
            android:textColor="@color/design_default_color_error"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/btn_login_ui_sign_in"
            android:text="@string/activity_login_sign_in_btn"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:padding="@dimen/edittext_default_padding"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="#00000000"
            android:minHeight="0dp"
            android:text="@string/activity_login_forgot"
            android:textAllCaps="false"
            android:textColor="@color/default_text_color"
            android:visibility="visible" />

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:background="@drawable/btn_login_ui_sign_up"
            android:text="@string/activity_login_sign_up_btn"
            android:textColor="@color/white"
            android:textSize="8pt"
            android:padding="@dimen/edittext_default_padding"
            android:visibility="visible" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>