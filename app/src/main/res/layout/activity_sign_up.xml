<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/textViewSignUpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="30dp"
            android:text="Sign Up"
            android:textAllCaps="true"
            android:textSize="15pt"
            android:textStyle="bold"
            android:visibility="visible" />

        <TextView
            android:id="@+id/textViewFieldSub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:text="@string/activity_signup_field_sub"
            android:visibility="visible" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">


            <EditText
                android:id="@+id/editTextUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_login_ui_rounded_corner"
                android:ems="10"
                android:hint="USERNAME *"
                android:inputType="text"
                android:padding="10dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewUsernameSub1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_username_sub1"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewUsernameSub2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_username_sub2"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewUsernameSub3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_username_sub3"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextPassword1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_login_ui_rounded_corner"
                android:ems="10"
                android:hint="PASSWORD *"
                android:inputType="textPassword"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewPasswordSub1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_password_sub1"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextPassword2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_login_ui_rounded_corner"
                android:ems="10"
                android:hint="PASSWORD *"
                android:inputType="textPassword"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewPasswordSub2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_password_sub2"
                android:visibility="visible" />

            <EditText
                android:id="@+id/editTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_login_ui_rounded_corner"
                android:ems="10"
                android:hint="@string/activity_signup_name"
                android:inputType="text"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewNameSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_name_sub"
                android:textColor="@color/design_default_color_error"
                android:visibility="gone" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext_login_ui_rounded_corner"
                android:ems="10"
                android:hint="@string/activity_signup_email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:selectAllOnFocus="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/textViewEmailSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_email_sub"
                android:textColor="@color/design_default_color_error"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/checkBoxUserInfoAgr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="30dp"
                android:text="@string/activity_signup_info_agr_chkbox" />

            <Button
                android:id="@+id/buttonSignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/btn_login_ui_sign_up"
                android:text="@string/activity_login_sign_up_btn"
                android:textColor="@color/white"
                android:textSize="9pt"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>