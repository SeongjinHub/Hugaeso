<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageView_listitem"
        android:layout_width="@dimen/activity_add_post_listitem_imgview_padding"
        android:layout_height="@dimen/activity_add_post_listitem_imgview_padding"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_location" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/activity_add_post_listitem_imgview_padding"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_listitem_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_add_post_listitem_title_textsize"
            android:textColor="@color/black"
            android:text="Item Title" />

        <TextView
            android:id="@+id/text_listitem_sub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/activity_add_post_listitem_sub_textsize"
            android:textColor="@color/black_90"
            android:text="Item Sub" />

    </LinearLayout>

</LinearLayout>