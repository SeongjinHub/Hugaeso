<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".FolderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/app_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/app_header"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="MapTrips"
                android:textAllCaps="false"
                android:textColor="@color/app_main_color"
                android:textSize="@dimen/app_header_fontsize"
                android:visibility="visible" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider"
        app:layout_constraintBottom_toTopOf="@+id/app_bottom"/>

    <LinearLayout
        android:id="@+id/app_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bottom"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:divider="@color/default_text_color"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/button_feed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/app_bottom_padding_top"
            android:paddingBottom="@dimen/app_bottom_padding_bottom"
            android:paddingLeft="@dimen/app_bottom_padding_left"
            android:paddingRight="@dimen/app_bottom_padding_right"
            android:background="@color/white"
            android:text="@string/bottom_feed"
            android:textSize="@dimen/app_bottom_fontsize"
            android:drawableTop="@drawable/btn_bottom_feed" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/app_bottom_padding_top"
            android:paddingBottom="@dimen/app_bottom_padding_bottom"
            android:paddingLeft="@dimen/app_bottom_padding_left"
            android:paddingRight="@dimen/app_bottom_padding_right"
            android:background="@color/white"
            android:text="@string/bottom_search"
            android:textSize="@dimen/app_bottom_fontsize"
            android:drawableTop="@drawable/btn_bottom_search" />

        <Button
            android:id="@+id/button_write"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/app_bottom_padding_top"
            android:paddingBottom="@dimen/app_bottom_padding_bottom"
            android:paddingLeft="@dimen/app_bottom_padding_left"
            android:paddingRight="@dimen/app_bottom_padding_right"
            android:background="@color/white"
            android:text="@string/bottom_write"
            android:textSize="@dimen/app_bottom_fontsize"
            android:drawableTop="@drawable/btn_bottom_write" />

        <Button
            android:id="@+id/button_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/app_bottom_padding_top"
            android:paddingBottom="@dimen/app_bottom_padding_bottom"
            android:paddingLeft="@dimen/app_bottom_padding_left"
            android:paddingRight="@dimen/app_bottom_padding_right"
            android:background="@color/white"
            android:text="@string/bottom_folder"
            android:textSize="@dimen/app_bottom_fontsize"
            android:textColor="@color/app_main_color"
            android:drawableTop="@drawable/btn_bottom_folder_selected" />

        <Button
            android:id="@+id/button_mypage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingTop="@dimen/app_bottom_padding_top"
            android:paddingBottom="@dimen/app_bottom_padding_bottom"
            android:paddingLeft="@dimen/app_bottom_padding_left"
            android:paddingRight="@dimen/app_bottom_padding_right"
            android:background="@color/white"
            android:text="@string/bottom_mypage"
            android:textSize="@dimen/app_bottom_fontsize"
            android:drawableTop="@drawable/btn_bottom_mypage" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>