<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <stroke android:width="0dp"
                android:color="@color/divider"/>
            <corners android:radius="@dimen/activity_post_imgview_radius"/>
            <solid android:color="@color/transparent" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="0dp"
                android:color="@color/divider"/>
            <corners android:topLeftRadius="@dimen/activity_post_menu_background_radius"
                android:topRightRadius="@dimen/activity_post_menu_background_radius"/>
            <solid android:color="@color/black_30" />
        </shape>
    </item>
</selector>